<h1 class='page_title'>Lista nabavki ovaca</h1>
<br>
<table class="table table-hover">
  <thead>
    <tr class='danger'>
      <th class="col-sm-2">Datum</th>
      <th class="col-sm-1">Lokacija</th>
      <th class="col-sm-1">broj ovaca</th>
      <th class="col-sm-1">ukupni troskovi</th>
      <th class="col-sm-3">Opste zapazanje</th>
      <th class="col-sm-1"></th>
    </tr>
  </thead>

  <tbody>
    <% @s_purchases.each do |sp| %>
      <tr>
        <td><%= sp.show_date %></td>
        <td><%= sp.location %></td>
        <td><strong><%= sp.sheep_purchases.count %></strong></td>
        <td><%= sp.total_costs%></td>
        <td><%= sp.comment %></td>
        <td><%= link_to 'prikazi', '/sheep_purchases/'+sp.id.to_s, class:"btn btn-primary" %></td>
     <!--   <td></td>-->
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<% if not current_user.nil? %>
        <%= link_to 'Nova nabavka ovaca', new_sheep_purchase_path, class:"btn btn-primary" %>
<% end %>