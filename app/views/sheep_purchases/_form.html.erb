<%= form_for(@sheep_purchase) do |f| %>

  <input type='hidden' name='activity_id'>  <br><br>
  
  <div class="field activity_header" >
    <strong> Datum</strong> <input type="text" data-behaviour='datepicker' data-format="YYYY/MM/DD" name='date'>
    &nbsp; lokacija <input  type='text' name='place'>
    &nbsp; nabavljeno <input type="text" name="size" id="quantity" />&nbsp;<span id="errmsg"></span>
    &nbsp; ovaca <br><br><br>
  </div>
  
       
       
        <div  id="accordion">
            <table class='table table-hover'>
              <thead>
                <tr class='info'>
                  <th class="col-sm-1">Oznaka</th>
                  <th class="col-sm-1">nadimak</th>
                  <th class="col-sm-1">pol</th>         
                  <th class="col-sm-1">procenat romanov</th>
                  <th class="col-sm-1">datum rodjenja</th>
                  <th class="col-sm-1">oznaka oca</th>
                  <th class="col-sm-1">oznaka majke</th>
                  <th class="col-sm-2">opis grla</th>
                  <th class="col-sm-2">napomena</th></tr>
              </thead>
              
              <tbody class='purchasing_list'> 
                
              </tbody>
            </table> 
        </div>
  
  <br>      
  <textarea class="form-control" rows="3" name='comment' placeholder="Unesi zapazanje protekle nabavke..."></textarea><br>
  
  <div class="actions">
    <%= f.submit :Snimi, class:"btn btn-primary" %>
    <%= link_to 'Nazad', sheep_purchases_path, class:"btn btn-default" %>
  </div>
<% end %>
